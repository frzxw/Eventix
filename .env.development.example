# Frontend (Vite) development env
VITE_ENVIRONMENT=development
VITE_AZURE_REGION=southeastasia

# API base (keep both in sync)
VITE_API_BASE_URL=http://localhost:7071/api
VITE_API_URL=http://localhost:7071/api
VITE_API_TIMEOUT_MS=30000

# Storage (for building asset URLs/CDN)
VITE_STORAGE_ACCOUNT_NAME=eventixstorage
VITE_STORAGE_CONTAINER_EVENTS=event-images
VITE_STORAGE_CONTAINER_QR_CODES=qr-codes
VITE_STORAGE_CDN_URL=http://127.0.0.1:10000/devstoreaccount1

# App Insights (optional in dev)
VITE_APPINSIGHTS_INSTRUMENTATION_KEY=
VITE_APPINSIGHTS_CONNECTION_STRING=

# Feature flags
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_ENABLE_WALLET_INTEGRATION=true

# Sessions & rate limiting (frontend toggles)
VITE_API_RATE_LIMIT_REQUESTS=100
VITE_API_RATE_LIMIT_WINDOW_MS=60000
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_REMEMBER_ME_DURATION_DAYS=7
