# Azure Cloud Configuration
# Copy this file to .env.development and .env.production, then fill in with your Azure credentials

# ==================== AZURE ENVIRONMENT ====================
# Set to 'development', 'staging', or 'production'
VITE_ENVIRONMENT=development
VITE_AZURE_REGION=southeastasia

# ==================== AZURE FUNCTIONS API ====================
# Azure Functions Backend API URL
# NOTE: Both keys are supported; api client reads VITE_API_URL and other code reads VITE_API_BASE_URL.
# Keep them in sync.
VITE_API_BASE_URL=http://localhost:7071/api
VITE_API_URL=http://localhost:7071/api
VITE_API_TIMEOUT_MS=30000

# ==================== AZURE STORAGE ====================
# Azure Blob Storage Configuration
VITE_STORAGE_ACCOUNT_NAME=eventixstorage
VITE_STORAGE_CONTAINER_EVENTS=event-images
VITE_STORAGE_CONTAINER_QR_CODES=qr-codes
VITE_STORAGE_CDN_URL=https://eventixcdn.azureedge.net

# ==================== AZURE APPLICATION INSIGHTS ====================
# Application Insights Telemetry
VITE_APPINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key-here
VITE_APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here

# ==================== AUTHENTICATION ====================
# JWT Configuration (handled by backend)
VITE_JWT_EXPIRY_MINUTES=15
VITE_JWT_REFRESH_EXPIRY_DAYS=7

# Azure AD B2C (Optional - for social login)
VITE_AZURE_AD_B2C_TENANT_ID=your-tenant-id
VITE_AZURE_AD_B2C_CLIENT_ID=your-client-id
VITE_AZURE_AD_B2C_AUTHORITY=https://your-tenant.b2clogin.com/your-tenant.onmicrosoft.com/B2C_1_susi
VITE_AZURE_AD_B2C_REDIRECT_URI=http://localhost:3000/auth/callback
VITE_AZURE_AD_B2C_SCOPES=openid profile email

# ==================== PAYMENT GATEWAY ====================
# Payment Gateway Configuration (Midtrans for Indonesia)
VITE_PAYMENT_PROVIDER=midtrans
VITE_MIDTRANS_CLIENT_KEY=your-midtrans-client-key
VITE_MIDTRANS_MERCHANT_ID=your-merchant-id
VITE_MIDTRANS_ENVIRONMENT=sandbox

# ==================== FEATURE FLAGS ====================
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_ENABLE_WALLET_INTEGRATION=true

# ==================== MONITORING & LOGGING ====================
VITE_LOG_LEVEL=info
VITE_ENABLE_NETWORK_LOGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ==================== RATE LIMITING ====================
VITE_API_RATE_LIMIT_REQUESTS=100
VITE_API_RATE_LIMIT_WINDOW_MS=60000

# ==================== SESSION CONFIGURATION ====================
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_REMEMBER_ME_DURATION_DAYS=7
