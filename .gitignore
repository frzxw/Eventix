pnpm-lock.yaml

# ---- AZURE FUNCTIONS SPECIFIC ----
*.dll
bin/
obj/
*.pdb

# ---- BRANCH PROTECTION ----
# Protect main branch
# (handled in GitHub settings)

# ---- DO NOT IGNORE ----
# ! = Negate pattern (unignore)
!.gitkeep
!.env.example
!.github/workflows/
!docs/
!src/
!azure/

# ---- PREVENT COMPILED JS IN SOURCE TREE ----
# TypeScript-only source: ensure accidentally emitted JS isn't tracked
src/**/*.js
src/**/*.jsx
src/**/*.js.map
