{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "@azure/functions"]
  },
  "include": [
    "index.ts",
    "handlers/auth.ts",
    "handlers/events.ts",
    "handlers/orders.ts",
    "handlers/tickets.ts",
    "utils/**/*.ts",
    "prisma.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "handlers/auth-production.ts",
    "handlers/events-production.ts",
    "handlers/orders-production.ts",
    "handlers/tickets-production.ts",
    "handlers/bookings.ts",
    "handlers/tickets.ts",
    "auth-login.ts"
  ]
}
